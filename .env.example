# HSTECH NLP Quant Factor Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS (Required for production mode)
# =============================================================================

# Event Registry API Key
# Get yours at: https://eventregistry.org/
ER_API_KEY=your_api_key_here

# =============================================================================
# DATA CONFIGURATION
# =============================================================================

# Demo mode (use mock data, no API key needed)
DEMO_MODE=true

# Data directory
DATA_DIR=./data
NEWS_OUTPUT_DIR=./news_out
REPORTS_DIR=./reports

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# HuggingFace model for sentiment analysis
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest

# Device: cpu or cuda
DEVICE=cpu

# Batch size for sentiment analysis
BATCH_SIZE=32

# =============================================================================
# BACKTEST CONFIGURATION
# =============================================================================

# Universe: Hang Seng Tech Index constituents
UNIVERSE=HSTECH

# Backtest period
START_DATE=2023-01-01
END_DATE=2024-01-01

# Rebalancing frequency: D (daily), W (weekly), M (monthly)
REBALANCE_FREQ=W

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# CACHE
# =============================================================================

# Enable API response caching
CACHE_ENABLED=true

# Cache directory
CACHE_DIR=./.cache
